{
  "name": "html-scss-js-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A simple Webpack boilerplate for HTML, SCSS, and JS-based projects",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "watch": "webpack --watch",
    "start": "webpack serve --open",
    "nodemon": "nodemon --inspect webpack.config.js --exec \"npm run start\"",
    "dev": "npm run clean && npm run nodemon",
    "build": "npm run clean && webpack --config webpack.config.js"
  },
  "author": "Margaux Flores",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/margauxflores/html-scss-js-webpack-boilerplate.git"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-webpack-plugin": "^2.4.1",
    "glob": "^7.1.6",
    "html-loader": "^1.3.2",
    "html-replace-webpack-plugin": "^2.6.0",
    "html-webpack-plugin": "^4.5.0",
    "image-webpack-loader": "^7.0.1",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.1.0",
    "stylelint": "^13.8.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
